<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "placeholders/botanik_logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>


        <!-- NAV MENU !!! -->
        <%if (controller_name.include? "pages") && (action_name == "dashboard") %>
          <li class="nav-item active">
        <%else %>
          <li class="nav-item">
        <%end%>
          <%= link_to "Dashboard", "/", class: "nav-link" %>
        </li>


        <%if controller_name.include? "orders"%>
          <li class="nav-item active">
        <%else %>
          <li class="nav-item">
        <%end%>
          <%= link_to "Ordres en cours", "/orders", class: "nav-link" %>
        </li>


        <!-- END NAV MENU !!! -->

        <li class="nav-item dropdown">
          <%= image_tag "placeholders/avatar.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Gérer ses réseaux", "/accounts", class: "dropdown-item" %>
            <%= link_to "Archives d'ordres", "/previous_orders", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>